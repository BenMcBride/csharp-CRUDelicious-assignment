@model Dish

<div class="container mt-3">
  <div class="text-center border rounded">
    <h1 class="display-4">Edit @Model.Name</h1>
  </div>
  <div class="text-center">
    <a class="m-3" asp-controller="Home" asp-action="Index">Home</a>
    <a class="m-3" asp-controller="Home" asp-action="NewDish">Add a Dish</a>
  </div>
  <form asp-action="UpdateDish" asp-controller="Home" asp-route-DishId="@Model.DishId" method="post">
    <div class="container mt-3 border rounded">
      <div class="row mb-3 mt-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Name" value="@Model.Name">
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <label asp-for="Chef" class="col-sm-2 col-form-label">Chef:</label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Chef" value="@Model.Chef">
          <span class="text-danger" asp-validation-for="Chef"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Calories" class="col-sm-2 col-form-label"># of Calories:</label>
        <div class="col-sm-10">
          <input type="number" asp-for="Calories" value="@Model.Calories">
          <span class="text-danger" asp-validation-for="Calories"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Tastiness" class="col-sm-2 col-form-label">Tastiness:</label>
        <div class="col-sm-10">
          <select asp-for="Tastiness" class="form-select" value="@Model.Tastiness">
            <option value="">Pick tastiness 1-5</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          <span class="text-danger" asp-validation-for="Tastiness"></span>
        </div>
      </div>

      <label asp-for="Description" class="form-label">Description:</label>
      <div class="mb-3">
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Edit Dish</button>
      </div>
    </div>
  </form>
</div>
